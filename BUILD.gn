import("//brave/build/cargo.gni")

group("https-everywhere-lib-cpp") {
  public_configs = [ ":external_config" ]
  public_deps = [ "//brave/build/rust" ]
}

config("external_config") {
  if (is_mac) {
    defines = [ "HTTPSE_SHARED_LIBRARY" ]
  }
}

source_set("rust_ffi") {
  visibility = [ "//brave/build/rust:*" ]

  public_configs = [ ":external_config" ]

  defines = [ "HTTPSE_IMPLEMENTATION" ]

  sources = [
    "src/lib.h",
    "src/wrapper.cpp",
    "src/wrapper.hpp"
  ]
}

source_set("rust_lib") {
  visibility = [ "//brave/build/rust:*" ]

  inputs = [
    "Cargo.toml",
    "src/lib.rs",
  ]
}
